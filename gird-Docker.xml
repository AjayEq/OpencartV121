      <class name="testCases.TC001_AccountRegTest"/>
      <class name="testCases.TC002_LoginTest"/>
     <!--<class name="testCases.TC003_DDTtest"/>--> 
    </classes>
  </test>
  
  
  <test thread-count="5" name="Linux-FireFox">
